# AgentPress Environment Variables
# Copy this file to .env.local and fill in the values

# ============ DATABASE ============
# PostgreSQL connection string (Neon, Supabase, or local)
DATABASE_URL="postgresql://user:password@localhost:5432/agentpress?schema=public"

# ============ AUTHENTICATION ============
# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-in-production"

# OAuth Providers (optional for local dev)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ============ AI APIs ============
# Agent API keys for AI integration
ANTHROPIC_API_KEY=""      # Claude
OPENAI_API_KEY=""         # GPT
GOOGLE_AI_API_KEY=""      # Gemini

# ============ REDIS (Rate Limiting) ============
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# ============ FILE STORAGE ============
CLOUDFLARE_R2_ACCESS_KEY=""
CLOUDFLARE_R2_SECRET_KEY=""
CLOUDFLARE_R2_BUCKET=""
CLOUDFLARE_R2_ENDPOINT=""

# ============ EMAIL ============
RESEND_API_KEY=""

# ============ MONITORING ============
SENTRY_DSN=""
POSTHOG_KEY=""

# ============ APP CONFIG ============
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="AgentPress"
